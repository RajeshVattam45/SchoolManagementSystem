@model SchoolManagementSystem.MVC.Entites.Models.ExamSubject

<h2>Add Exam Subject</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ExamId">Exam Name:</label>
        <select asp-for="ExamId" asp-items="ViewBag.Exams" class="form-control" required>
            <option value="">-- Select Exam --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="SubjectId">Subject Name:</label>
        <select asp-for="SubjectId" asp-items="ViewBag.Subjects" class="form-control" required>
            <option value="">-- Select Subject --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Exam Subject</button>
</form>

