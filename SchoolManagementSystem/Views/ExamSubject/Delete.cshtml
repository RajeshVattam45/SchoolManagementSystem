@model SchoolManagementSystem.MVC.Entites.Models.ExamSubject

@{
    ViewData["Title"] = "Delete Exam Subject";
}

<h2>Delete Exam Subject</h2>
<p>Are you sure you want to delete this exam subject?</p>
<div>
    <h4>@Model.Exam</h4>
    <p>ID: @Model.ExamId</p>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
