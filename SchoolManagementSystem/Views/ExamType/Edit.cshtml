@model SchoolManagementSystem.Models.ExamType

@{
    ViewData["Title"] = "Edit Exam";
}

<h2>Edit Exam</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ExamTypeId"></label>
        <input asp-for="ExamTypeId" class="form-control" />
        <span asp-validation-for="ExamTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExamTypeName"></label>
        <input asp-for="ExamTypeName" type="text" class="form-control" />
        <span asp-validation-for="ExamTypeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxMarks"></label>
        <input asp-for="MaxMarks" class="form-control" />
        <span asp-validation-for="MaxMarks" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>