@model SchoolManagementSystem.MVC.Entites.Models.Exam

@{
    ViewData["Title"] = "Edit Exam";
}

<h2>Edit Exam</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ExamId" />
    <div class="form-group">
        <label asp-for="ExamName"></label>
        <input asp-for="ExamName" class="form-control" />
        <span asp-validation-for="ExamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExamDate"></label>
        <input asp-for="ExamDate" type="date" class="form-control" />
        <span asp-validation-for="ExamDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExamTypeId"></label>
        <input asp-for="ExamTypeId" class="form-control" />
        <span asp-validation-for="ExamTypeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>