@model IEnumerable<SchoolManagementSystem.MVC.Entites.Models.Exam>

<h2>Exam List</h2>
<a asp-action="Create" class="btn btn-primary">Add Exam</a>
<table class="table">
    <thead>
        <tr>
            <th>Exam Name</th>
            <th>Exam Date</th>
            <th>Exam Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.ExamName</td>
                <td>@exam.ExamDate.ToShortDateString()</td>
                <td>@exam.ExamType.ExamTypeName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@exam.ExamId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@exam.ExamId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
